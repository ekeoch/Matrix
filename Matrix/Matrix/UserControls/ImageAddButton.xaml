<UserControl x:Class="Matrix.ImageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="30" d:DesignWidth="87" Name="add">
    
    <Grid x:Name="LayoutRoot" Height="31" Width="84">
        <TextBlock Height="30" HorizontalAlignment="Left" Name="textBlock1" Text="Add" VerticalAlignment="Top" />
        <Image Height="30" HorizontalAlignment="Left" Margin="53,0,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="32" Source="/Matrix;component/Images/appbar.add.rest.png" />
    </Grid>
</UserControl>
